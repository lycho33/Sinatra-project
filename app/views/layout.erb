          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        <% if logged_in? %>
            <li class="nav-item">
            <a class="nav-link" href="/home">Your Profile</a>
            </li>
        <% else %>
            <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
            </li> 
        <% end %>
        </ul>
        <form action="/search" method="get" class="d-flex">
