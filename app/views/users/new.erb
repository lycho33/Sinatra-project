<form action="/signup" method="POST">
    <label for="username">Username</label>
        <input type="username" name="user[username]" placeholder="username"><br> 
    <label for="email">Email</label>  
        <input type="email" name="user[email]" placeholder="email"><br>
    <label for="password">Password</label>
        <input type="password" name="user[password]" placeholder="password"><br>
    <label for="password_confirm">Password Confirmation</label>
        <input type="password" name="user[password]" placeholder="password confirmation"><br>
    <input type="submit" value="Create Account">
</form>